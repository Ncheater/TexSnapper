<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".view.SplashActivity" android:background="@color/backgroundDark">
	<ImageView
			android:layout_width="match_parent"
			android:layout_height="match_parent" app:srcCompat="@drawable/background"
			tools:layout_editor_absoluteY="5dp" tools:layout_editor_absoluteX="0dp" android:id="@+id/imageView5"
			android:alpha="0.2"/>
	<ProgressBar
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:id="@+id/progressBar"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginBottom="150dp"
			app:layout_constraintBottom_toBottomOf="parent" android:clickable="false"
			style="@style/Widget.AppCompat.ProgressBar" android:indeterminate="true"/>
	<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/imageView"
			app:srcCompat="@drawable/logo"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/progressBar"/>
</android.support.constraint.ConstraintLayout>