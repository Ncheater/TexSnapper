<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".view.MenuActivity" android:background="@color/backgroundLight">

	<ImageView
			android:layout_width="wrap_content"
			android:layout_height="100dp" app:srcCompat="@drawable/logo"
			android:id="@+id/imageView2"
			android:scaleType="fitCenter"
			app:layout_constraintEnd_toEndOf="@+id/textView"
			app:layout_constraintTop_toTopOf="@+id/textView" app:layout_constraintBottom_toBottomOf="@+id/textView"
			app:layout_constraintStart_toStartOf="@+id/textView"
			app:layout_constraintHorizontal_bias="0.12"/>
	<TextView
			android:text="Tex     napper"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textView"
			android:textSize="55sp"
			android:fontFamily="sans-serif-smallcaps" android:typeface="normal" android:textStyle="bold"
			android:textColor="@color/colorPrimary"
			android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:singleLine="true"/>
	<ImageButton
			android:layout_width="162dp"
			android:layout_height="148dp" app:srcCompat="@drawable/camera"
			android:id="@+id/imageButton"
			android:scaleType="fitCenter" android:background="@android:drawable/bottom_bar"
			android:cropToPadding="true" android:padding="15dp" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginTop="150dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
</android.support.constraint.ConstraintLayout>